<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Traffic Data</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #c5c6c7;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            height: 100vh;
            overflow: hidden;
            position: relative;
        }

        /* Background stars */
        .stars {
            position: absolute;
            width: 100%;
            height: 100%;
            background: black url('https://www.script-tutorials.com/demos/360/images/stars.png') repeat;
            animation: moveStars 100s linear infinite;
            z-index: -1;
        }

        @keyframes moveStars {
            from { background-position: 0 0; }
            to { background-position: -10000px 5000px; }
        }

        /* Table and text styling */
        h1 {
            color: #66fcf1;
            margin-bottom: 20px;
            text-shadow: 0 0 10px rgba(0, 255, 243, 0.7);
        }

        button {
            font-size: 1.2rem;
            padding: 10px 25px;
            color: #fff;
            background: linear-gradient(90deg, rgba(0,255,247,1) 0%, rgba(0,160,255,1) 100%);
            border-radius: 50px;
            border: none;
            cursor: pointer;
            box-shadow: 0px 4px 15px rgba(0, 255, 243, 0.4);
            transition: all 0.4s ease-in-out;
        }

        button:hover {
            background: linear-gradient(90deg, rgba(255,0,255,1) 0%, rgba(160,0,255,1) 100%);
            box-shadow: 0px 4px 20px rgba(255, 0, 255, 0.6);
            transform: scale(1.05);
        }

        table {
            width: 90%;
            max-height: 70vh;
            border-collapse: collapse;
            background-color: rgba(11, 12, 16, 0.5); /* Make table background semi-transparent */
            border: 1px solid #45a29e;
            margin-top: 20px;
            overflow-y: scroll;
            display: block;
        }

        th, td {
            padding: 15px;
            border: 1px solid #45a29e;
            text-align: center;
        }

        th {
            background-color: rgba(31, 40, 51, 0.8); /* Semi-transparent header */
            color: #66fcf1;
        }

        td {
            color: #c5c6c7;
        }

        #countdown {
            color: #66fcf1;
            font-size: 1.5rem;
            margin-top: 20px;
        }

        .button-container {
            margin-top: 20px;
        }

        .button-container ul {
            list-style: none;
            padding: 0;
        }

        .button-container li {
            margin: 10px 0;
        }
        .rocket {
       width: 160px;
         height: 160px;
        object-fit: cover;
        }

        .button-container li a {
            text-decoration: none;
        }
    </style>
    <script>
        // Countdown logic
        let countdownTime = 10;

        function updateCountdown() {
            if (countdownTime > 0) {
                document.getElementById('countdown').innerText = `Refreshing in ${countdownTime} seconds`;
                countdownTime--;
            } else {
                location.reload(); // Refresh the page after countdown
            }
        }

        setInterval(updateCountdown, 1000); // Update countdown every 1 second
    </script>
    <meta http-equiv="refresh" content="10"> <!-- Refresh the page every 10 seconds -->
</head>
<body>
    <!-- Moving stars background -->
    <div class="stars"></div>

    <h1>Traffic Data Monitoring</h1>

    <div id="countdown">Refreshing in 10 seconds</div>

    <!-- Table displaying Inbound and Outbound Traffic data -->
